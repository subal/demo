<apex:page Controller="StoreFrontController" tabStyle="Merchandise__c">
 <apex:pageBlock title="Our Products">
<apex:pageBlockSection columns="1">
 <apex:pageBlockTable value="{!products}" var="pitem">
 <apex:column headerValue="Product">
 <apex:outputText value="{!pitem.name}"></apex:outputText>
 </apex:column>
 <apex:column headerValue="Description">
 <apex:outputText value="{!pitem.Description__c}"></apex:outputText>
 </apex:column>
 <apex:column headerValue="Price">
 <apex:outputText value="{!pitem.Price__c}"></apex:outputText>
 </apex:column>
 </apex:pageBlockTable>
</apex:pageBlockSection>
</apex:pageBlock>
</apex:page>